.certificates-slider
    margin-top w(95)
    background-color #181818
    +below(375px)
            margin-top 70px

    &__content
        position absolute
        top w(95)
        left w(180)
        z-index 1

    &__wrap
        padding-top w(130)
        display flex
        flex-direction row
        justify-content flex-start
        align-items center

    &__title
        width w(750)
        padding-top w(130)
        font-family 'Roboto'
        font-style normal
        font-weight 900
        font-size 56px
        line-height 68px
        letter-spacing 0.04em
        text-transform uppercase
        color #F2F2F2

    &__subtitle
        padding-top w(30)
        width w(700)
        font-family 'Roboto'
        font-style normal
        font-weight 500
        font-size 24px
        line-height 28px
        letter-spacing 0.04em
        text-transform uppercase
        color #F2F2F2

    &__mail
        width w(76)
        height w(76)
        background-image url('../../images/mail.png')

    &__text
        padding-left w(20)
        font-family 'Roboto'
        font-style normal
        font-weight 700
        font-size 16px
        line-height 24px
        letter-spacing 0.04em
        text-transform uppercase
        color #FFB100

    &__list
        margin-top w(20)
        position relative
        display flex
        flex-flow row nowrap

    &__slider
        display flex
        flex-direction row
        justify-content flex-start
        align-items center
        margin-top w(160)

    &__swap
        cursor pointer
        position relative
        margin-right 20px
        width 60px
        height 60px
        background $c-orange_1

        &:last-child
            margin-right 0

    &__left
        margin 10px
        width 40px
        transform rotate(-180deg)

        img
            width 100%

    &__rigth
        margin 10px
        width 40px

        img
            width 100%

    &__item
        width 380px
        margin-right 30px
        flex-shrink 0
        padding 40px 45px
        background $c-white_2
        +below(1200px)
            width 360px
            padding 35px

        +below(768px)
            width 330px
            padding 25px
            &:last-child
                display none

        +below(375px)
            width 160px
            padding 10px
            margin-right 20px

    &__main_image
        position absolute
        width 11%
        top 0

        img
            width 100%
            
    .slick
        position relative

    .slick-track
        height w(800)

    .slick-slide
        width 1000px
        height 100%
        margin 100px -130px 0 0

    .slider-active:nth-child(3)
        z-index 2
        

    .slick-arrow
        position absolute
        bottom 120px
        font-size 0
        border 3px solid $c-orange_1
        z-index 1
        width 60px
        height 60px

    .slick-prev
        left 180px
        background url('../../images/prev.png') no-repeat center
        +below(375px)
            right 275px

    .slick-next
        left 260px
        background url('../../images/next.png') no-repeat center
        +below(375px)
            right 195px