.contact
    background-color #181818
    width 100%
    height 100vh
    padding-top w(95)

    &__title
        padding-top w(120)
        font-family 'Roboto'
        font-style normal
        font-weight 600
        font-size 46px
        line-height 54px
        letter-spacing 0.04em
        text-transform uppercase
        color #F2F2F2

    &__subtitle
        padding-top w(30)
        font-family 'Roboto'
        font-style normal
        font-weight 700
        font-size 16px
        line-height 24px
        letter-spacing 0.02em
        color #E0E0E0
        &:first-child
            padding-top w(40)

    &__text
        padding-top w(10)
        font-family 'Roboto'
        font-style normal
        font-weight 400
        font-size 16px
        line-height 24px
        letter-spacing 0.02em
        color #E0E0E0

    &__text-mail
        padding-top w(10)
        font-family 'Roboto'
        font-style normal
        font-weight 400
        font-size 16px
        line-height 26px
        letter-spacing 0.02em
        text-decoration-line underline
        color #FFB100
        &:hover
            color #BB7000

    &__image
        position absolute
        top w(95)
        right 0
        width 60%
        img
            width 100%
