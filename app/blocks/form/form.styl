.form
    position absolute
    top 0
    left 0
    width 100%
    height 100vh
    z-index 1
    background-color rgba(0, 0, 0, 0.65)

    &__image
        width w(705)
        height w(765)
        padding-top w(120)
        margin 0 auto

    &__wrap
        position absolute
        top w(300)
        left 37%
        width w(500)

    &__wrap-1
        display flex
        flex-direction column

    &__treatment
        padding-top w(30)
        display flex
        flex-direction row

    &__title
        padding-bottom w(60)
        font-family 'Roboto'
        font-style normal
        font-weight 600
        font-size 46px
        line-height 54px
        letter-spacing 0.04em
        text-transform uppercase
        color #F2F2F2

    &__input
        width w(500)
        height w(60)
        padding-left w(20)
        background-color #333333
        border 2px solid #4F4F4F
        border-radius 4px
        &:first-child
            margin-bottom w(30)
        &:hover
                font-family 'Roboto'
                font-style normal
                font-weight 500
                font-size 16px
                line-height 24px
                letter-spacing 0.04em
                color #F2F2F2
                border 2px solid #FFFFFF
        &::placeholder
            color #4F4F4F
            &:hover
                color #F2F2F2

    &__checkbox
        input
            width w(20)
            height w(20)
            border 1px solid #FFFFFF
            background-color #333333
            &::before
                background-color #FFFFFF

    &__text
        padding-left w(20)
        font-family 'Roboto'
        font-style normal
        font-weight 400
        font-size 14px
        line-height 20px
        letter-spacing 0.04em
        color #BDBDBD

    &__button
        margin-top w(50)
        width w(500)
        height w(65)
        background #FFB100
        border-radius w(4)
        border none
        font-family 'Roboto'
        font-style normal
        font-weight 700
        font-size 16px
        line-height 24px
        letter-spacing 0.04em
        text-transform uppercase
        color #181818

    &__closeModal
        position absolute
        top w(260)
        left 64%
        width w(24)
        height w(24)
        opacity 0.2
        cursor pointer
        transition opacity ease 0.5s

        &:hover
            opacity 1

        &::before
        &::after 
            content ''
            position absolute
            top w(10)
            display block
            width w(24)
            height w(3)
            background #BDBDBD

        &::before 
            transform: rotate(45deg)

        &::after
            transform: rotate(-45deg)